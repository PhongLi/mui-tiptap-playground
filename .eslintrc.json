{
  // configuration for javascript files
  "extends": [
    "next/core-web-vitals", // needed to avoid warning in next.js build: 'The Next.js plugin was not detected in your ESLint configuration'
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": true,
        "endOfLine": "auto",
        "semi": false,
        "tabWidth": 4,
        "arrowParens": "avoid",
        "useTabs": false,
        "bracketSameLine": false,
        "bracketSpacing": true,
        "proseWrap": "preserve"
      }
    ]
  },
  "ignorePatterns": ["next-env.d.ts"],
  "overrides": [
    // configuration for typescript files
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "plugins": [
        "@typescript-eslint",
        "unused-imports",
        "simple-import-sort"
      ],
      "extends": [
        "next/core-web-vitals",
        "plugin:prettier/recommended"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "singleQuote": true,
            "jsxSingleQuote": true,
            "endOfLine": "auto",
            "semi": false,
            "tabWidth": 4,
            "arrowParens": "avoid",
            "useTabs": false,
            "bracketSameLine": false,
            "bracketSpacing": true,
            "proseWrap": "preserve"
          }
        ],
        "@typescript-eslint/comma-dangle": "off", // Avoid conflict rule between Eslint and Prettier
        "@typescript-eslint/consistent-type-imports": "error", // Ensure `import type` is used when it's necessary
        "@typescript-eslint/no-unused-vars": "off", // Avoid conflict with unused-imports/no-unused-vars
        "unused-imports/no-unused-imports": "error",
        "unused-imports/no-unused-vars": [
          "warn",
          { "argsIgnorePattern": "^_" }
        ],
        "import/prefer-default-export": "off", // Named export is easier to refactor automatically
        "simple-import-sort/imports": "warn", // Import configuration for `eslint-plugin-simple-import-sort`
        "simple-import-sort/exports": "warn", // Export configuration for `eslint-plugin-simple-import-sort`
        "react/function-component-definition": [
          "warn",
          {
            "namedComponents": ["function-declaration", "arrow-function"],
            "unnamedComponents": "arrow-function"
          }
        ],
        "react/display-name": "off",
        "no-nested-ternary": "off",
        "import/no-extraneous-dependencies": "off",
        "react/no-unescaped-entities": "off"
      }
    }
  ]
}
